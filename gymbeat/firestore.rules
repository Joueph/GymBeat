rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Permite que usuários autenticados leiam e atualizem seus próprios perfis
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }

    // Permite que usuários autenticados criem, leiam, atualizem e deletem suas próprias fichas
    match /fichas/{fichaId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == resource.data.usuarioId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.usuarioId;
    }

    // Permite que usuários autenticados criem, leiam, atualizem e deletem seus próprios treinos
    match /treinos/{treinoId} {
       allow read, update, delete: if request.auth != null && request.auth.uid == resource.data.usuarioId;
       allow create: if request.auth != null && request.auth.uid == request.resource.data.usuarioId;
    }

    // Permite que usuários autenticados criem e leiam seus próprios logs
    match /logs/{logId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.usuarioId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.usuarioId;
    }

    // Permite que usuários autenticados leiam os modelos de exercícios
    match /exerciciosModelos/{exercicioId} {
      allow read: if request.auth != null;
    }
  }
}